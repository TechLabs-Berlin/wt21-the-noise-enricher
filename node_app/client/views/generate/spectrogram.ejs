<% layout('layouts/boilerplate.ejs') %>
    <link rel="stylesheet" href="../../public/css/spectrogram.css">
    <%- include("../partials/background_animation.ejs") %>

        <div class="canvas">

            <div id="results">
                <h2 id="waitingTitle">Results will appear in 5 to 30 seconds...</h2>
            </div>

            <div class="spectrogram">
                <section id="spectrogram-input">
                    <h5>Your input sound file spectrogram</h5>
                    <div id="incomingWaveform"><span id="incomingSpectrogram"></span></div> 
                      
                    <p><audio src="../../public/uploads/<%= filepath %>" type="audio/wav" controls loop></audio> </p>
                </section>
                <section id="spectrogram-loading">
                    <img id="spectrogram-loading-gif" src="../../content/loading.gif" alt="loading wheel">
                </section>
                <section id="spectrogram-output">
                    <h5>Output sound file spectrogram</h5>
                    <div id="resultWaveform"><span id="resultSpectrogram"></span></div>
                    <p><audio type="audio/wav" id="outputAudio" controls loop></audio> </p>
                </section>
            </div>

            <h2 id="thankyou">Thank you for using the noise enricher!</h2>
            <div id="thx">
                <p>How did it go? </p>
                <span><img src="../../content/thumb-up.png"><img src="../../content/thumb-down.png"></span>
            </div>
            <a href="/">Generate a new track here</a>
      

        </div>

        <script src="https://unpkg.com/wavesurfer.js"></script>
        <script src="https://unpkg.com/wavesurfer.js@5.2.0/dist/plugin/wavesurfer.spectrogram.min.js"></script>
        <script src="../../public/js/draw_spectrogram.js"></script>
        <script>
            const wavesurfer = drawInputSpectrogram("../../public/uploads/<%= filepath %>");
        </script>
